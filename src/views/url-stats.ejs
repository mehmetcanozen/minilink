<div class="stats-page">
    <section class="stats-hero">
        <div class="hero-background">
            <div class="gradient-overlay"></div>
            <div class="floating-shapes">
                <div class="shape shape-1"></div>
                <div class="shape shape-2"></div>
                <div class="shape shape-3"></div>
            </div>
        </div>
        
        <div class="container">
            <div class="hero-content">
                <div class="hero-header">
                    <div class="hero-icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <h1 class="hero-title">URL Analytics</h1>
                    <p class="hero-subtitle">Comprehensive insights for your shortened link</p>
                </div>
                
                <div class="main-url-card-new">
                    <div class="url-display-section">
                        <div class="url-header">
                            <div class="url-icon">
                                <i class="fas fa-link"></i>
                            </div>
                            <div class="url-title">
                                <h3>Your Shortened URL</h3>
                                <p>Share this link with others</p>
                            </div>
                        </div>
                        
                        <div class="url-content">
                            <div class="url-box">
                                <div class="url-text-display">
                                    <span class="url-protocol">https://</span>
                                    <span class="url-domain">localhost:3000/</span>
                                    <span class="url-slug"><%= slug %></span>
                                    <div class="url-full-fallback" style="display: none; margin-top: 0.5rem; font-size: 0.875rem; color: #64748b;">
                                        <%= shortUrl %>
                                    </div>
                                </div>
                                <div class="url-actions-new">
                                    <button class="action-btn-new copy-btn-new" onclick="copyToClipboard('<%= shortUrl %>')" title="Copy URL">
                                        <i class="fas fa-copy"></i>
                                        <span>Copy</span>
                                    </button>
                                    <a href="<%= shortUrl %>" target="_blank" class="action-btn-new visit-btn-new" title="Visit URL">
                                        <i class="fas fa-external-link-alt"></i>
                                        <span>Visit</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="stats-section">
                        <div class="stats-header">
                            <div class="stats-icon">
                                <i class="fas fa-chart-bar"></i>
                            </div>
                            <div class="stats-title">
                                <h3>Performance</h3>
                                <p>Real-time tracking</p>
                            </div>
                        </div>
                        
                        <div class="stats-content">
                            <div class="stat-card-main">
                                <div class="stat-number">
                                    <span class="big-number"><%= urlStats.clickCount %></span>
                                    <span class="stat-label">Total Clicks</span>
                                </div>
                                <div class="stat-indicator">
                                    <div class="indicator-dot"></div>
                                    <span>Live</span>
                                </div>
                            </div>
                            
                            <div class="stat-details">
                                <div class="detail-item">
                                    <i class="fas fa-calendar"></i>
                                    <span>Created: <%= urlStats.createdAt ? new Date(urlStats.createdAt).toLocaleDateString() : 'Unknown' %></span>
                                </div>
                                <div class="detail-item">
                                    <i class="fas fa-clock"></i>
                                    <span>Last click: <%= urlStats.updatedAt ? new Date(urlStats.updatedAt).toLocaleDateString() : 'Never' %></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="stats-dashboard">
        <div class="container">
            <div class="dashboard-grid">
                <div class="dashboard-main">
                    <div class="detail-card">
                        <div class="card-header">
                            <div class="header-icon">
                                <i class="fas fa-link"></i>
                            </div>
                            <div class="header-content">
                                <h3>URL Details</h3>
                                <p>Complete information about your shortened link</p>
                            </div>
                        </div>
                        
                        <div class="card-body">
                            <div class="url-section">
                                <label class="section-label">Original URL</label>
                                <div class="original-url-display">
                                    <div class="url-content">
                                        <a href="<%= urlStats.originalUrl %>" target="_blank" class="original-link">
                                            <%= urlStats.originalUrl %>
                                        </a>
                                        <span class="external-icon">
                                            <i class="fas fa-external-link-alt"></i>
                                        </span>
                                    </div>
                                    <button class="copy-original-btn" onclick="copyToClipboard('<%= urlStats.originalUrl %>')">
                                        <i class="fas fa-copy"></i>
                                        Copy
                                    </button>
                                </div>
                            </div>

                            <div class="stats-grid">
                                <div class="stat-item created">
                                    <div class="stat-icon">
                                        <i class="fas fa-calendar-plus"></i>
                                    </div>
                                    <div class="stat-content">
                                        <div class="stat-label">Created</div>
                                        <div class="stat-value" id="createdDate">
                                            <%= urlStats.createdAt ? new Date(urlStats.createdAt).toLocaleDateString('en-US', {
                                                year: 'numeric',
                                                month: 'short',
                                                day: 'numeric'
                                            }) : 'Unknown' %>
                                        </div>
                                        <div class="stat-time">
                                            <%= urlStats.createdAt ? new Date(urlStats.createdAt).toLocaleTimeString('en-US', {
                                                hour: '2-digit',
                                                minute: '2-digit'
                                            }) : 'Unknown' %>
                                        </div>
                                    </div>
                                </div>

                                <div class="stat-item updated">
                                    <div class="stat-icon">
                                        <i class="fas fa-clock"></i>
                                    </div>
                                    <div class="stat-content">
                                        <div class="stat-label">Last Click</div>
                                        <div class="stat-value" id="updatedDate">
                                            <%= urlStats.updatedAt ? new Date(urlStats.updatedAt).toLocaleDateString('en-US', {
                                                year: 'numeric',
                                                month: 'short',
                                                day: 'numeric'
                                            }) : 'Never' %>
                                        </div>
                                        <div class="stat-time">
                                            <%= urlStats.updatedAt ? new Date(urlStats.updatedAt).toLocaleTimeString('en-US', {
                                                hour: '2-digit',
                                                minute: '2-digit'
                                            }) : 'Never' %>
                                        </div>
                                    </div>
                                </div>

                                <% if (urlStats.expiresAt) { %>
                                <div class="stat-item expires">
                                    <div class="stat-icon">
                                        <i class="fas fa-hourglass-end"></i>
                                    </div>
                                    <div class="stat-content">
                                        <div class="stat-label">Expires</div>
                                        <div class="stat-value" id="expiresDate">
                                            <%= urlStats.expiresAt ? new Date(urlStats.expiresAt).toLocaleDateString('en-US', {
                                                year: 'numeric',
                                                month: 'short',
                                                day: 'numeric'
                                            }) : 'Never' %>
                                        </div>
                                        <div class="stat-time">
                                            <%= urlStats.expiresAt ? new Date(urlStats.expiresAt).toLocaleTimeString('en-US', {
                                                hour: '2-digit',
                                                minute: '2-digit'
                                            }) : 'Never' %>
                                        </div>
                                    </div>
                                </div>
                                <% } %>
                            </div>

                            <div class="url-id-section">
                                <label class="section-label">URL ID (for API usage)</label>
                                <div class="id-display">
                                    <input type="text" class="id-input" value="<%= urlStats.id %>" readonly>
                                    <button class="copy-id-btn" onclick="copyToClipboard('<%= urlStats.id %>')">
                                        <i class="fas fa-copy"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="dashboard-sidebar">
                    <div class="qr-card">
                        <div class="card-header">
                            <div class="header-icon">
                                <i class="fas fa-qrcode"></i>
                            </div>
                            <div class="header-content">
                                <h3>QR Code</h3>
                                <p>Scan to access your link</p>
                            </div>
                        </div>
                        
                        <div class="card-body">
                            <div class="qr-display">
                                <div class="qr-container">
                                    <img src="https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=<%= encodeURIComponent(shortUrl) %>" 
                                        alt="QR Code" class="qr-image">
                                </div>
                                <div class="qr-actions">
                                    <button class="qr-btn primary" onclick="showQRModal()">
                                        <i class="fas fa-expand"></i>
                                        View Full Size
                                    </button>
                                    <button class="qr-btn secondary" onclick="downloadQRCode()">
                                        <i class="fas fa-download"></i>
                                        Download
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="actions-card">
                        <div class="card-header">
                            <div class="header-icon">
                                <i class="fas fa-bolt"></i>
                            </div>
                            <div class="header-content">
                                <h3>Quick Actions</h3>
                                <p>Manage your link</p>
                            </div>
                        </div>
                        
                        <div class="card-body">
                            <div class="action-buttons">
                                <button class="action-button share-btn" onclick="shareUrl()">
                                    <div class="btn-icon">
                                        <i class="fas fa-share"></i>
                                    </div>
                                    <div class="btn-content">
                                        <span class="btn-title">Share URL</span>
                                        <span class="btn-subtitle">Share with others</span>
                                    </div>
                                </button>
                                
                                <button class="action-button refresh-btn" onclick="refreshStats()">
                                    <div class="btn-icon">
                                        <i class="fas fa-sync-alt"></i>
                                    </div>
                                    <div class="btn-content">
                                        <span class="btn-title">Refresh Stats</span>
                                        <span class="btn-subtitle">Update data</span>
                                    </div>
                                </button>
                                
                                <a href="/" class="action-button create-btn">
                                    <div class="btn-icon">
                                        <i class="fas fa-plus"></i>
                                    </div>
                                    <div class="btn-content">
                                        <span class="btn-title">Create New</span>
                                        <span class="btn-subtitle">Shorten another URL</span>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="insights-card">
                        <div class="card-header">
                            <div class="header-icon">
                                <i class="fas fa-lightbulb"></i>
                            </div>
                            <div class="header-content">
                                <h3>Performance Insights</h3>
                                <p>Analytics overview</p>
                            </div>
                        </div>
                        
                        <div class="card-body">
                            <% 
                            const daysSinceCreated = urlStats.createdAt ? Math.max(1, Math.floor((new Date() - new Date(urlStats.createdAt)) / (1000 * 60 * 60 * 24))) : 1;
                            const avgClicksPerDay = (urlStats.clickCount / daysSinceCreated).toFixed(1);
                            const progressWidth = Math.min(avgClicksPerDay * 10, 100);
                            %>
                            
                            <div class="insight-item">
                                <div class="insight-header">
                                    <span class="insight-label">Daily Average</span>
                                    <span class="insight-value"><%= avgClicksPerDay %> clicks</span>
                                </div>
                                <div class="progress-container">
                                    <div class="progress-bar">
                                        <div class="progress-fill" style="width: 0%;"
                                        data-width="<%= progressWidth %>"></div>
                                    </div>
                                </div>
                            </div>

                            <div class="insight-item">
                                <div class="insight-header">
                                    <span class="insight-label">Link Age</span>
                                    <span class="insight-value">
                                        <%= daysSinceCreated %> <%= daysSinceCreated === 1 ? 'day' : 'days' %>
                                    </span>
                                </div>
                            </div>

                            <div class="performance-status">
                                <% if (urlStats.clickCount === 0) { %>
                                    <div class="status-item info">
                                        <div class="status-icon">
                                            <i class="fas fa-info-circle"></i>
                                        </div>
                                        <div class="status-content">
                                            <div class="status-title">Getting Started</div>
                                            <div class="status-message">No clicks yet. Share your URL to get started!</div>
                                        </div>
                                    </div>
                                <% } else if (urlStats.clickCount >= 100) { %>
                                    <div class="status-item success">
                                        <div class="status-icon">
                                            <i class="fas fa-star"></i>
                                        </div>
                                        <div class="status-content">
                                            <div class="status-title">Popular Link!</div>
                                            <div class="status-message">This is performing exceptionally well!</div>
                                        </div>
                                    </div>
                                <% } else if (urlStats.clickCount >= 10) { %>
                                    <div class="status-item good">
                                        <div class="status-icon">
                                            <i class="fas fa-thumbs-up"></i>
                                        </div>
                                        <div class="status-content">
                                            <div class="status-title">Good Engagement</div>
                                            <div class="status-message">Keep sharing to grow your audience!</div>
                                        </div>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

